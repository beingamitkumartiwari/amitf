<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="25dp"
    android:clickable="false"
    android:elevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv"
            android:gravity="center"
            android:padding="10dp"
            android:text="Prepaid Recharge"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            android:elevation="10dp">
        <TextView
            android:id="@+id/remainingBalanceRedeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="Your current balance is "
            android:textColor="@android:color/white"
            android:textSize="15sp" /></android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioSelf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@mipmap/editbox_bg"
                    android:checked="true"
                    android:padding="15dp"
                    android:text="Self" />

                <RadioButton
                    android:id="@+id/radioOthers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@mipmap/editbox_bg"
                    android:padding="15dp"
                    android:text="Others" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/editbox_bg"
                android:padding="15dp"
                android:text="+91"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/redeemMobileNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@mipmap/editbox_bg"
                android:inputType="number"
                android:maxLength="10"
                android:padding="15dp"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/select_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/editbox_bg"
            android:padding="15dp"
            android:text="Select Operator" />

        <TextView
            android:id="@+id/select_ammount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/editbox_bg"
            android:padding="15dp"
            android:text="Select Amount" />

        <Button
            android:id="@+id/redeemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/button_selector2"
            android:text="Redeem"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="NOTE: 100 Credits = 1 Rs."
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="* Applicable on prepaid numbers only.\n* Minimum redumption amount is Rs. 50.\n* Validity, Talktime will be as per current operator's plan. For more details contact your network operator." />
    </LinearLayout>
</ScrollView>