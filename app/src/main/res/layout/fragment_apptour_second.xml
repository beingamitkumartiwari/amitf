<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="On wake up screen slide left to unlock device and slide right to get different option to get your offers."
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/second_img_tour" /></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In case of slow network you have to wait some times to get your favourite ads."
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="50dp"/>

</LinearLayout>