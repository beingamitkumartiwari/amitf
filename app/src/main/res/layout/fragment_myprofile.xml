<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/userMobNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIL"
        android:background="@drawable/shape_tv"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/user_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/editbox_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:text="Date of Birth"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/user_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/editbox_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:text="Gender"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/user_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/editbox_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:text="Occupation"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/user_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/editbox_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:text="Income"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/user_marital_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/editbox_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="Marital Status"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/user_details_submit_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@drawable/button_selector2"/>
    </LinearLayout>
</ScrollView>