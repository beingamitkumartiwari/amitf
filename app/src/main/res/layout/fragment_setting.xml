<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lock Screen Setting"
            android:textSize="18sp"
            android:padding="15dp"
            android:textColor="@color/my_primary_color"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:clickable="false"
            android:elevation="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/myBackgroundColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp">

                <LinearLayout
                    android:id="@+id/ll_activator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_selector">
                    <TextView
                        android:id="@+id/activateTv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Activate Lock"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:layout_margin="10dp"  />
                    <CheckBox
                        android:id="@+id/activator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="10dp"
                        android:checked="false"
                        android:clickable="false" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_selector">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Select Clock"
                        android:textSize="13sp"
                        android:layout_margin="10dp"
                        android:textColor="#000000"/>

                    <Spinner
                        android:id="@+id/spinnerClock"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More"
            android:textSize="18sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/my_primary_color" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:clickable="false"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/feeback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support &amp; Feedback"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:background="@drawable/button_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

                <TextView
                    android:id="@+id/share_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share with friends"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:background="@drawable/button_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

                <TextView
                    android:id="@+id/rate_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate us in the Google Play Store"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:background="@drawable/button_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

                <TextView
                    android:id="@+id/appTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Tour"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:background="@drawable/button_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

                <TextView
                    android:id="@+id/faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAQ"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:background="@drawable/button_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/myBackgroundColor" />

                <TextView
                    android:id="@+id/about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="#000000"
                    android:padding="15dp"
                    android:clickable="true"
                    android:textSize="13sp"
                    android:background="@drawable/button_selector" />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>