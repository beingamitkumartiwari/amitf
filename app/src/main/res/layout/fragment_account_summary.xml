<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="7dp"
        android:clickable="false"
        android:elevation="10dp"
        card_view:background="@color/my_primary_color"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/ll_bg_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Action\nPerformed"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:background="#79BD8C"
                    android:layout_margin="1dp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Earned\nCredit"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:background="#79BD8C"
                    android:layout_margin="1dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:text="Offers"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:background="@color/my_primary_color" />

                <TextView
                    android:id="@+id/summaryOffer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    android:background="@color/my_primary_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:text="Ad View"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:background="@color/my_primary_color" />

                <TextView
                    android:id="@+id/summaryAdClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:text="-"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:background="@color/my_primary_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:text="Redeem"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:background="@color/my_primary_color" />

                <TextView
                    android:id="@+id/summaryRedeem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:text="-"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textColor="@android:color/white"
                    android:background="@color/my_primary_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Credits"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:layout_margin="1dp"
                    android:textColor="@android:color/white"
                    android:background="@color/my_primary_color" />

                <TextView
                    android:id="@+id/summaryTotalBalance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:text="-"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    android:background="@color/my_primary_color" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>